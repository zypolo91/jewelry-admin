# 应用配置
NEXT_PUBLIC_APP_NAME="N Admin"
NEXT_PUBLIC_APP_DESCRIPTION="现代化的后台管理系统"

# 数据库配置
DATABASE_DIALECT=mysql # mysql | postgres
# 推荐：使用连接串（支持 MySQL/PG）
# DATABASE_URL="mysql://root:root@localhost:3306/n_admin"
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/n_admin"

DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=root
DATABASE_NAME=n_admin

# JWT 配置
JWT_SECRET=your_very_long_random_secret_key

# Supabase 配置（文件管理）
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
# 二选一：SUPABASE_STORAGE_BUCKET 或 SUPABASE_UPLOADS_BUCKET
SUPABASE_STORAGE_BUCKET=uploads
SUPABASE_UPLOADS_BUCKET=uploads
# 可选：统一前缀（例如 uploads/admin）
SUPABASE_STORAGE_PREFIX=

# 管理员配置
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=Administrator
ADMIN_PASSWORD=Admin@123456
SALT_ROUNDS=12
